<head>
<style>
* { margin: 0; padding: 0; box-sizing: border-box; }

.cards {
display: grid;
grid-gap: 1rem;
grid-template-column­s: repeat(auto-fit, minmax(0px, 1fr));
padding: 1rem;
}

.card {
border: 1px solid #ccc;
box-shadow: 3px 3px 3px #rgba(73, 98, 104,0.1);
padding: 2rem 1rem;

}

</style>
<link href="//­netdna.bootstrapcdn.c­om/bootstrap/3.2.0/­css/­bootstrap.min.css" rel="stylesheet" id="bootstrap-css"> <script src="//­netdna.bootstrapcdn.c­om/bootstrap/3.2.0/­js/­bootstrap.min.js"></­script>
<link rel="stylesheet" href="https://­maxcdn.bootstrapcdn.c­om/font-awesome/­4.7.0/css/­font-awesome.min.css">
<script src="https://­code.jquery.com/­jquery-3.3.1.js"></script>
</head>
<body>

<p id="notice"><%= notice %></p>


<div class="row">
<h2 class="text-center">
   <%= link_to('Voir le profil', user_path(@acteur.user_id)) %>
</h2>
<div class="col-sm-6">
    <div class="card well">
      <div class="card-body">
<p>

            
  <strong>Nom et prénom:</strong>
  <%= @acteur.nom_et_prenom %>
</p>

<p>
  <strong>Numero:</strong>
  <%= @acteur.numero %>
</p>

<p>
  <strong>Email:</strong>
  <%= @acteur.email %>
</p>

<p>
  <strong>Info carrière:</strong>
  <%= @acteur.info_carriere %>
</p>

<p>
  <strong>Ambition:</strong>
  <%= @acteur.ambition %>
</p>


<% if acteur_author(@acteur) %>
  <%= link_to 'Edit', edit_acteur_path(@acteur) %> |
  <%= link_to 'Delete', @acteur, method: :delete, data: { confirm: "Êtes-vous sure ?" } %> |
<% end %>
</div>
</div>
</div>
</div>


<div class="buttn"><%= link_to 'Back', acteurs_path %></div>

</body>