<p id="notice"><%= notice %></p>




<h2>
  <%= link_to('Voir le profil', user_path(@chef_operateur.user_id)) %>
</h2>
<p>
  <strong>Nom et prénom:</strong>
  <%= @chef_operateur.nom_et_prenom %>
</p>

<p>
  <strong>Numero:</strong>
  <%= @chef_operateur.numero %>
</p>

<p>
  <strong>Email:</strong>
  <%= @chef_operateur.email %>
</p>

<p>
  <strong>Info carrière:</strong>
  <%= @chef_operateur.info_carriere %>
</p>

<p>
  <strong>Ambition:</strong>
  <%= @chef_operateur.ambition %>
</p>


<% if chef_operateur_author(@chef_operateur) %>
  <%= link_to 'Edit', edit_chef_operateur_path(@chef_operateur) %> |
  <%= link_to 'Delete', @chef_operateur, method: :delete, data: { confirm: "Êtes-vous sure ?" } %> |
<% end %>
<%= link_to 'Back', chef_operateurs_path %>
