<div class="row">
  <div class="col-lg-4 col-lg-offset-4 well">
    <h3 class="text-center">Changez votre mot de passe</h3>
    <br>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <% if resource.errors.any? %>
        <div class="alert alert-danger alert-dismissable">
          <%= resource.errors.full_messages.first %>
          <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        </div>
      <% end %>
      <%= f.hidden_field :reset_password_token %>
      <div class="form-group">
        <%= f.label :password, "Nouveau mot de passe" %><br />
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autofocus: true, autocomplete: 'off', class: 'form-control', placeholder: 'Mot de passe' %>
      </div>
      <div class="form-group">
        <%= f.label :password_confirmation, 'Confirmer le nouveau mot de passe'%><br />
        <%= f.password_field :password_confirmation, autocomplete: 'off', class: 'form-control', placeholder: 'Répétez votre mot de passe' %>
      </div>
      <div class="actions">
        <%= f.submit 'Changer le mot de passe', class: 'btn btn-primary' %>
      </div>
    <% end %>
    <br>
    <%= render "devise/shared/links" %>
  </div>
</div>